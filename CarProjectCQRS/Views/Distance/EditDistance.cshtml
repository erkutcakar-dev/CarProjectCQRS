@model CarProjectCQRS.Entities.Distance

@{
    ViewData["Title"] = "Edit Distance";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Dashboard / Distance Management /</span> Edit Distance
    </h4>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Edit Distance Information</h5>
                    <a href="@Url.Action("DistanceList", "Distance")" class="btn btn-outline-secondary">
                        <i class="bx bx-arrow-back me-2"></i>Back to List
                    </a>
                </div>
                <div class="card-body">
                    <form asp-action="EditDistance" method="post">
                        <input asp-for="DistanceId" type="hidden" />
                        
                        <div class="row">
                            <!-- From Location -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="From" class="form-label">From Location <span class="text-danger">*</span></label>
                                <input asp-for="From" class="form-control" placeholder="Enter starting location" />
                                <span asp-validation-for="From" class="text-danger"></span>
                            </div>

                            <!-- Destination -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Destination" class="form-label">Destination <span class="text-danger">*</span></label>
                                <input asp-for="Destination" class="form-control" placeholder="Enter destination location" />
                                <span asp-validation-for="Destination" class="text-danger"></span>
                            </div>

                            <!-- Distance Value -->
                            <div class="col-12 mb-3">
                                <label asp-for="DistanceValue" class="form-label">Distance (km) <span class="text-danger">*</span></label>
                                <input asp-for="DistanceValue" type="number" class="form-control" placeholder="Enter distance in kilometers" />
                                <span asp-validation-for="DistanceValue" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="bx bx-save me-2"></i>Update Distance
                                </button>
                                <a href="@Url.Action("DistanceList", "Distance")" class="btn btn-outline-secondary">
                                    <i class="bx bx-x me-2"></i>Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
