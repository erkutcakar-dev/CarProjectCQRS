@model CarProjectCQRS.Models.AvailableCarsViewModel
@{
    ViewData["Title"] = "Booking Confirmation";
    Layout = "~/Views/Shared/_CarsBookingLayout.cshtml";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3">Booking <span class="text-primary">Confirmation</span></h1>
            <p class="mb-0">Please review your booking details before confirming.</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Booking Summary</h4>
                    </div>
                    <div class="card-body">
                        @if (Model.AvailableCars.Any())
                        {
                            var car = Model.AvailableCars.First();
                            <div class="row">
                                <div class="col-md-4">
                                    <img src="@car.ImageUrl" class="img-fluid rounded" alt="@car.Brand @car.Model">
                                </div>
                                <div class="col-md-8">
                                    <h3>@car.Brand @car.Model</h3>
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <strong>Pick Up Location:</strong><br>
                                            @Model.SearchCriteria.PickUpLocation
                                        </div>
                                        <div class="col-6">
                                            <strong>Drop Off Location:</strong><br>
                                            @Model.SearchCriteria.DropOffLocation
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <strong>Pick Up Date:</strong><br>
                                            @Model.SearchCriteria.PickUpDate.ToString("dd/MM/yyyy")
                                        </div>
                                        <div class="col-6">
                                            <strong>Drop Off Date:</strong><br>
                                            @Model.SearchCriteria.DropOffDate.ToString("dd/MM/yyyy")
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <strong>Duration:</strong><br>
                                            @Model.TotalDays day(s)
                                        </div>
                                        <div class="col-6">
                                            <strong>Daily Rate:</strong><br>
                                            $@car.DailyPrice.ToString("0.00")
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-6">
                                            <h4 class="text-primary">Total Price:</h4>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h4 class="text-primary">$@Model.TotalPrice.ToString("0.00")</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <form method="post" action="@Url.Action("ConfirmBooking", "Booking")">
                            <input type="hidden" name="CarId" value="@Model.SearchCriteria.CarId" />
                            <input type="hidden" name="PickUpLocation" value="@Model.SearchCriteria.PickUpLocation" />
                            <input type="hidden" name="DropOffLocation" value="@Model.SearchCriteria.DropOffLocation" />
                            <input type="hidden" name="PickUpDate" value="@Model.SearchCriteria.PickUpDate.ToString("yyyy-MM-dd")" />
                            <input type="hidden" name="DropOffDate" value="@Model.SearchCriteria.DropOffDate.ToString("yyyy-MM-dd")" />
                            <input type="hidden" name="AirportId" value="@Model.SearchCriteria.AirportId" />
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <a href="@Url.Action("AvailableCars")" class="btn btn-outline-secondary w-100">
                                        <i class="fas fa-arrow-left me-2"></i>Back to Cars
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <button type="submit" class="btn btn-success w-100" onclick="return confirmBooking()">
                                        <i class="fas fa-check me-2"></i>Confirm Booking
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- SweetAlert2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

<script>
    function confirmBooking() {
        // SweetAlert2'nin yüklenip yüklenmediğini kontrol et
        if (typeof Swal === 'undefined') {
            // SweetAlert2 yüklenmemişse normal confirm kullan
            if (confirm('Are you sure you want to confirm this booking? This action cannot be undone.')) {
                document.querySelector('form').submit();
            }
            return false;
        }
        
        Swal.fire({
            title: 'Are you sure?',
            text: "Are you sure you want to confirm this booking? This action cannot be undone.",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#28a745',
            cancelButtonColor: '#dc3545',
            confirmButtonText: 'Yes, confirm booking!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                document.querySelector('form').submit();
            }
        });
        
        return false;
    }
    
    // SweetAlert2'yi dinamik olarak yükle
    function loadSweetAlert() {
        return new Promise((resolve, reject) => {
            if (typeof Swal !== 'undefined') {
                resolve();
                return;
            }
            
            const script = document.createElement('script');
            script.src = 'https://cdn.jsdelivr.net/npm/sweetalert2@11';
            script.onload = resolve;
            script.onerror = reject;
            document.head.appendChild(script);
        });
    }
    
    // Sayfa yüklendiğinde
    document.addEventListener('DOMContentLoaded', function() {
        loadSweetAlert().then(() => {
            // TempData'dan gelen başarı mesajını kontrol et
            @if (TempData["Success"] != null)
            {
                <text>
                Swal.fire({
                    title: 'Reservation Successful!',
                    text: '@Html.Raw(TempData["Success"])',
                    icon: 'success',
                    confirmButtonColor: '#28a745',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '@Url.Action("Index", "MainUi")';
                    }
                });
                </text>
            }
            
            @if (TempData["Error"] != null)
            {
                <text>
                Swal.fire({
                    title: 'Error!',
                    text: '@Html.Raw(TempData["Error"])',
                    icon: 'error',
                    confirmButtonColor: '#dc3545',
                    confirmButtonText: 'OK'
                });
                </text>
            }
        }).catch(() => {
            console.log('SweetAlert2 yüklenemedi, normal alert kullanılacak');
        });
    });
</script>

