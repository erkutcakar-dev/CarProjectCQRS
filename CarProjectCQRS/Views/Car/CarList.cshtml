@model List<CarProjectCQRS.Entities.Car>

@{
    ViewData["Title"] = "Car Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Dashboard /</span> Car Management
    </h4>

    <!-- Add Car Button -->
    <div class="row mb-4">
        <div class="col-12">
            <a href="@Url.Action("AddCar", "Car")" class="btn btn-primary">
                <i class="bx bx-plus me-2"></i>Add New Car
            </a>
        </div>
    </div>

    <div class="card">
        <h5 class="card-header">Car List</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>Vehicle</th>
                        <th>Specifications</th>
                        <th>Pricing</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.IsAvailable ? "table-success" : "table-secondary")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.Brand @item.Model" class="rounded me-3" width="60" height="40" style="object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="avatar avatar-sm me-3">
                                                <span class="avatar-initial bg-label-primary rounded">
                                                    <i class="bx bx-car"></i>
                                                </span>
                                            </div>
                                        }
                                        <div>
                                            <strong>@item.Brand @item.Model</strong>
                                            <br>
                                            <small class="text-muted">@item.ModelYear • @item.FuelType</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <i class="bx bx-group text-primary me-1"></i><strong>@item.SeatCount</strong> seats
                                        <br>
                                        <i class="bx bx-cog text-info me-1"></i>@item.GearType • @item.TransmissionType
                                        <br>
                                        <small class="text-muted">@item.Mileage.ToString("N0") km</small>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bx bx-dollar text-success me-2"></i>
                                        <div>
                                            <strong>$@item.DailyPrice.ToString("N2")</strong>
                                            <br>
                                            <small class="text-muted">per day</small>
                                            @if (item.ReviewScore > 0)
                                            {
                                                <br>
                                                <span class="badge bg-label-warning">
                                                    <i class="bx bx-star"></i> @item.ReviewScore.ToString("N1")
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (item.IsAvailable)
                                        {
                                            <span class="badge bg-label-success me-2">Available</span>
                                            <a href="@Url.Action("ToggleAvailability", "Car", new { id = item.CarId })" class="btn btn-sm btn-outline-warning" title="Make Unavailable" onclick="return confirm('Are you sure you want to make this car unavailable?')">
                                                <i class="bx bx-toggle-right"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="badge bg-label-secondary me-2">Unavailable</span>
                                            <a href="@Url.Action("ToggleAvailability", "Car", new { id = item.CarId })" class="btn btn-sm btn-outline-success" title="Make Available" onclick="return confirm('Are you sure you want to make this car available?')">
                                                <i class="bx bx-toggle-left"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="@Url.Action("EditCar", "Car", new { id = item.CarId })">
                                                <i class="bx bx-edit-alt me-1"></i> Edit
                                            </a>
                                            <a class="dropdown-item" href="@Url.Action("DeleteCar", "Car", new { id = item.CarId })" onclick="return confirm('Are you sure you want to delete this car?')">
                                                <i class="bx bx-trash me-1"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="bx bx-car display-4 text-muted mb-2"></i>
                                    <h6 class="text-muted">No cars found</h6>
                                    <p class="text-muted">Click "Add New Car" to create your first car record.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

