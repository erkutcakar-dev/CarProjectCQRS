@model CarProjectCQRS.Entities.Car

@{
    ViewData["Title"] = "Add Car";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Dashboard / Car Management /</span> Add New Car
    </h4>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Add New Car Information</h5>
                    <a href="@Url.Action("CarList", "Car")" class="btn btn-outline-secondary">
                        <i class="bx bx-arrow-back me-2"></i>Back to List
                    </a>
                </div>
                <div class="card-body">
                    <form asp-action="AddCar" method="post">
                        <div class="row">
                            <!-- Basic Information -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Brand" class="form-label">Brand <span class="text-danger">*</span></label>
                                <input asp-for="Brand" class="form-control" placeholder="Enter car brand (e.g., Toyota)" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Model" class="form-label">Model <span class="text-danger">*</span></label>
                                <input asp-for="Model" class="form-control" placeholder="Enter car model (e.g., Camry)" />
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ModelYear" class="form-label">Model Year <span class="text-danger">*</span></label>
                                <input asp-for="ModelYear" type="number" class="form-control" placeholder="e.g., 2023" min="1990" max="2030" />
                                <span asp-validation-for="ModelYear" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ImageUrl" class="form-label">Image URL</label>
                                <input asp-for="ImageUrl" class="form-control" placeholder="Enter car image URL" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>

                            <!-- Technical Specifications -->
                            <div class="col-md-4 mb-3">
                                <label asp-for="SeatCount" class="form-label">Seat Count <span class="text-danger">*</span></label>
                                <select asp-for="SeatCount" class="form-select">
                                    <option value="">Select Seat Count</option>
                                    <option value="2">2 Seats</option>
                                    <option value="4">4 Seats</option>
                                    <option value="5">5 Seats</option>
                                    <option value="7">7 Seats</option>
                                    <option value="8">8 Seats</option>
                                </select>
                                <span asp-validation-for="SeatCount" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="FuelType" class="form-label">Fuel Type <span class="text-danger">*</span></label>
                                <select asp-for="FuelType" class="form-select">
                                    <option value="">Select Fuel Type</option>
                                    <option value="Petrol">Petrol</option>
                                    <option value="Diesel">Diesel</option>
                                    <option value="Electric">Electric</option>
                                    <option value="Hybrid">Hybrid</option>
                                    <option value="LPG">LPG</option>
                                </select>
                                <span asp-validation-for="FuelType" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="GearType" class="form-label">Gear Type <span class="text-danger">*</span></label>
                                <select asp-for="GearType" class="form-select">
                                    <option value="">Select Gear Type</option>
                                    <option value="AUTO">Automatic</option>
                                    <option value="MANUAL">Manual</option>
                                    <option value="CVT">CVT</option>
                                </select>
                                <span asp-validation-for="GearType" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="TransmissionType" class="form-label">Transmission Type</label>
                                <input asp-for="TransmissionType" class="form-control" placeholder="e.g., Automatic, Manual" />
                                <span asp-validation-for="TransmissionType" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Mileage" class="form-label">Mileage (km) <span class="text-danger">*</span></label>
                                <input asp-for="Mileage" type="number" class="form-control" placeholder="e.g., 25000" min="0" />
                                <span asp-validation-for="Mileage" class="text-danger"></span>
                            </div>

                            <!-- Pricing & Rating -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="DailyPrice" class="form-label">Daily Price ($) <span class="text-danger">*</span></label>
                                <input asp-for="DailyPrice" type="number" step="0.01" class="form-control" placeholder="e.g., 187.50" min="0" />
                                <span asp-validation-for="DailyPrice" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ReviewScore" class="form-label">Review Score (0-5)</label>
                                <input asp-for="ReviewScore" type="number" step="0.1" class="form-control" placeholder="e.g., 4.8" min="0" max="5" />
                                <span asp-validation-for="ReviewScore" class="text-danger"></span>
                            </div>

                            <!-- Status -->
                            <div class="col-12 mb-3">
                                <div class="form-check form-switch">
                                    <input asp-for="IsAvailable" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="IsAvailable" class="form-check-label">Available for Rental</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="bx bx-save me-2"></i>Save Car
                                </button>
                                <a href="@Url.Action("CarList", "Car")" class="btn btn-outline-secondary">
                                    <i class="bx bx-x me-2"></i>Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

