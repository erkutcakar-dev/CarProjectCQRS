@model List<CarProjectCQRS.Entities.TurkeyAirport>

@{
    ViewData["Title"] = "Turkey Airport Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Dashboard /</span> Turkey Airport Management
    </h4>

    <!-- Add Turkey Airport Button -->
    <div class="row mb-4">
        <div class="col-12">
            <a href="@Url.Action("AddTurkeyAirport", "TurkeyAirport")" class="btn btn-primary">
                <i class="bx bx-plus me-2"></i>Add New Turkey Airport
            </a>
        </div>
    </div>

    <div class="card">
        <h5 class="card-header">Turkey Airport List</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>Airport</th>
                        <th>Province</th>
                        <th>Airport Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-sm me-3">
                                            <span class="avatar-initial bg-label-primary rounded">@item.AirPortId</span>
                                        </div>
                                        <div>
                                            <strong>Airport #@item.AirPortId</strong>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bx bx-map-pin text-info me-2"></i>
                                        <div>
                                            <strong>@item.Province</strong>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bx bx-plane text-primary me-2"></i>
                                        <div>
                                            <strong>@item.AirportName</strong>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="@Url.Action("EditTurkeyAirport", "TurkeyAirport", new { id = item.AirPortId })">
                                                <i class="bx bx-edit-alt me-1"></i> Edit
                                            </a>
                                            <a class="dropdown-item" href="@Url.Action("DeleteTurkeyAirport", "TurkeyAirport", new { id = item.AirPortId })" onclick="return confirm('Are you sure you want to delete this turkey airport?')">
                                                <i class="bx bx-trash me-1"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="bx bx-info-circle display-4 text-muted mb-2"></i>
                                    <h6 class="text-muted">No Turkey Airport records found</h6>
                                    <p class="text-muted">Click "Add New Turkey Airport" to create your first record.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
