@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" class="light-style layout-menu-fixed">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Car Project Admin</title>

    @await Component.InvokeAsync("AdminHeadComponentPartial")
</head>

<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">

            @await Component.InvokeAsync("AdminSidebarComponentPartial")

            <div class="layout-page">
                @await Component.InvokeAsync("AdminNavbarComponentPartial")

                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        <div class="layout-overlay layout-menu-toggle"></div>
    </div>

    @await Component.InvokeAsync("AdminFooterComponentPartial")

    @RenderSection("Scripts", required: false)
</body>
</html>

