@model List<CarProjectCQRS.CQRSPattern.Results.Testimonial.GetTestimonialQueryResult>

<div class="container-fluid testimonial pb-5">
    <div class="container pb-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3">Our Clients<span class="text-primary"> Reviews</span></h1>
            <p class="mb-0">
                Rent a car with ease and comfort. Whether you need a vehicle for a business trip, family vacation, or daily commute, we offer a wide range of cars at affordable prices. Enjoy flexible booking options, 24/7 customer support, and well-maintained vehicles to ensure a smooth driving experience.
            </p>
        </div>

        <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.1s">
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                <div class="testimonial-item" style="height: 100%; display: flex; flex-direction: column;">
                    <div class="testimonial-quote">
                        <i class="fa fa-quote-right fa-2x"></i>
                    </div>

                    <div class="testimonial-inner d-flex p-4 align-items-start flex-grow-1">
                        <div class="testimonial-img-container me-4">
                            <img src="@item.ImageUrl" class="img-fluid rounded-circle"
                                 style="width: 80px; height: 80px; object-fit: cover; object-position: center; flex-shrink: 0;" alt="">
                        </div>
                        <div class="testimonial-content flex-grow-1">
                            <h4 class="mb-2">@item.TestimonialName</h4>
                            <div class="d-flex text-primary mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= item.Rating)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-star text-body"></i>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="border-top rounded-bottom p-4 mt-auto">
                        <p class="mb-0">@item.Comment</p>
                    </div>
                </div>
                }
            }
            else
            {
                <div class="text-center p-4">
                    <p class="text-muted">No testimonials available. Please add some testimonials from the admin panel.</p>
                </div>
            }
        </div>
    </div>
</div>


