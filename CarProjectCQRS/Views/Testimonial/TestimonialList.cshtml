@model List<CarProjectCQRS.Entities.Testimonial>

@{
    ViewData["Title"] = "Testimonial Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Dashboard /</span> Testimonial Management
    </h4>

    <!-- Add Testimonial Button -->
    <div class="row mb-4">
        <div class="col-12">
            <a href="@Url.Action("AddTestimonial", "Testimonial")" class="btn btn-primary">
                <i class="bx bx-plus me-2"></i>Add New Testimonial
            </a>
        </div>
    </div>

    <div class="card">
        <h5 class="card-header">Testimonial List</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>Customer</th>
                        <th>Comment</th>
                        <th>Rating</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.IsActive ? "table-success" : "table-secondary")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.TestimonialName" class="rounded-circle me-3" width="40" height="40" />
                                        }
                                        else
                                        {
                                            <div class="avatar avatar-sm me-3">
                                                <span class="avatar-initial bg-label-primary rounded-circle">@(item.TestimonialName?.Substring(0, 1).ToUpper())</span>
                                            </div>
                                        }
                                        <div>
                                            <strong>@item.TestimonialName</strong>
                                            <br>
                                            <small class="text-muted">ID: @item.TestimonialId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <strong>@(item.Comment?.Length > 60 ? item.Comment.Substring(0, 60) + "..." : item.Comment)</strong>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="d-flex align-items-center">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= item.Rating)
                                                {
                                                    <i class="bx bxs-star text-warning me-1"></i>
                                                }
                                                else
                                                {
                                                    <i class="bx bx-star text-muted me-1"></i>
                                                }
                                            }
                                        </div>
                                        <div class="ms-2">
                                            <strong>@item.Rating/5</strong>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-label-success me-2">Active</span>
                                            <a href="@Url.Action("ToggleStatus", "Testimonial", new { id = item.TestimonialId })" class="btn btn-sm btn-outline-warning" title="Deactivate" onclick="return confirm('Are you sure you want to deactivate this testimonial?')">
                                                <i class="bx bx-toggle-right"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="badge bg-label-secondary me-2">Inactive</span>
                                            <a href="@Url.Action("ToggleStatus", "Testimonial", new { id = item.TestimonialId })" class="btn btn-sm btn-outline-success" title="Activate" onclick="return confirm('Are you sure you want to activate this testimonial?')">
                                                <i class="bx bx-toggle-left"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="@Url.Action("EditTestimonial", "Testimonial", new { id = item.TestimonialId })">
                                                <i class="bx bx-edit-alt me-1"></i> Edit
                                            </a>
                                            <a class="dropdown-item" href="@Url.Action("DeleteTestimonial", "Testimonial", new { id = item.TestimonialId })" onclick="return confirm('Are you sure you want to delete this testimonial?')">
                                                <i class="bx bx-trash me-1"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="bx bx-info-circle display-4 text-muted mb-2"></i>
                                    <h6 class="text-muted">No Testimonial records found</h6>
                                    <p class="text-muted">Click "Add New Testimonial" to create your first record.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
