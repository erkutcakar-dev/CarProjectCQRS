@model List<CarProjectCQRS.Entities.Reservation>

@{
    ViewData["Title"] = "Reservation Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Dashboard /</span> Reservation Management
    </h4>

    <!-- Add Reservation Button -->
    <div class="row mb-4">
        <div class="col-12">
            <a href="@Url.Action("AddReservation", "Reservation")" class="btn btn-primary">
                <i class="bx bx-plus me-2"></i>Add New Reservation
            </a>
        </div>
    </div>

    <div class="card">
        <h5 class="card-header">Reservation List</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>Reservation</th>
                        <th>Car Info</th>
                        <th>Locations</th>
                        <th>Dates</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.IsActive ? "table-success" : "table-secondary")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-sm me-3">
                                            <span class="avatar-initial bg-label-primary rounded">@item.ReservationId</span>
                                        </div>
                                        <div>
                                            <strong>Reservation #@item.ReservationId</strong>
                                            <br>
                                            <small class="text-muted">Created: @item.CreatedDate.ToString("dd/MM/yyyy")</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bx bx-car text-primary me-2"></i>
                                        <div>
                                            <strong>Car ID: @item.CarId</strong>
                                            <br>
                                            <small class="text-muted">@item.CarType</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bx bx-map-pin text-info me-2"></i>
                                        <div>
                                            <strong>@item.PickUpLocation</strong>
                                            <br>
                                            <small class="text-muted">
                                                <i class="bx bx-right-arrow-alt"></i> @item.DropOffLocation
                                            </small>
                                            @if (!string.IsNullOrEmpty(item.airport))
                                            {
                                                <br>
                                                <small class="text-muted">Airport: @item.airport</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bx bx-calendar text-warning me-2"></i>
                                        <div>
                                            <strong>@item.PickUpDate.ToString("dd/MM/yyyy")</strong>
                                            <br>
                                            <small class="text-muted">
                                                <i class="bx bx-right-arrow-alt"></i> @item.DropOffDate.ToString("dd/MM/yyyy")
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-label-success me-2">Active</span>
                                            <a href="@Url.Action("ToggleStatus", "Reservation", new { id = item.ReservationId })" class="btn btn-sm btn-outline-warning" title="Deactivate" onclick="return confirm('Are you sure you want to deactivate this reservation?')">
                                                <i class="bx bx-toggle-right"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="badge bg-label-secondary me-2">Inactive</span>
                                            <a href="@Url.Action("ToggleStatus", "Reservation", new { id = item.ReservationId })" class="btn btn-sm btn-outline-success" title="Activate" onclick="return confirm('Are you sure you want to activate this reservation?')">
                                                <i class="bx bx-toggle-left"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="@Url.Action("EditReservation", "Reservation", new { id = item.ReservationId })">
                                                <i class="bx bx-edit-alt me-1"></i> Edit
                                            </a>
                                            <a class="dropdown-item" href="@Url.Action("DeleteReservation", "Reservation", new { id = item.ReservationId })" onclick="return confirm('Are you sure you want to delete this reservation?')">
                                                <i class="bx bx-trash me-1"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="bx bx-info-circle display-4 text-muted mb-2"></i>
                                    <h6 class="text-muted">No Reservation records found</h6>
                                    <p class="text-muted">Click "Add New Reservation" to create your first record.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
