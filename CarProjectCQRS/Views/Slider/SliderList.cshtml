@model List<CarProjectCQRS.Entities.Slider>

@{
    ViewData["Title"] = "Slider Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Dashboard /</span> Slider Management
    </h4>

    <!-- Add Slider Button -->
    <div class="row mb-4">
        <div class="col-12">
            <a href="@Url.Action("AddSlider", "Slider")" class="btn btn-primary">
                <i class="bx bx-plus me-2"></i>Add New Slider
            </a>
        </div>
    </div>

    <div class="card">
        <h5 class="card-header">Slider List</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>Slider</th>
                        <th>Image</th>
                        <th>Content</th>
                        <th>Redirect</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.IsActive ? "table-success" : "table-secondary")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-sm me-3">
                                            <span class="avatar-initial bg-label-primary rounded">@item.SliderId</span>
                                        </div>
                                        <div>
                                            <strong>Slider #@item.SliderId</strong>
                                            <br>
                                            <small class="text-muted">Created: @item.CreatedDate.ToString("dd/MM/yyyy")</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.Title" class="rounded me-3" width="60" height="40" style="object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="avatar avatar-sm me-3">
                                                <span class="avatar-initial bg-label-secondary rounded">
                                                    <i class="bx bx-image"></i>
                                                </span>
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <strong>@item.Title</strong>
                                            <br>
                                            <small class="text-muted">@item.SubTitle</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.RedirectUrl))
                                        {
                                            <i class="bx bx-link text-info me-2"></i>
                                            <div>
                                                <strong>@(item.RedirectUrl.Length > 30 ? item.RedirectUrl.Substring(0, 30) + "..." : item.RedirectUrl)</strong>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No redirect</span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-label-success me-2">Active</span>
                                            <a href="@Url.Action("ToggleStatus", "Slider", new { id = item.SliderId })" class="btn btn-sm btn-outline-warning" title="Deactivate" onclick="return confirm('Are you sure you want to deactivate this slider?')">
                                                <i class="bx bx-toggle-right"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="badge bg-label-secondary me-2">Inactive</span>
                                            <a href="@Url.Action("ToggleStatus", "Slider", new { id = item.SliderId })" class="btn btn-sm btn-outline-success" title="Activate" onclick="return confirm('Are you sure you want to activate this slider?')">
                                                <i class="bx bx-toggle-left"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="@Url.Action("EditSlider", "Slider", new { id = item.SliderId })">
                                                <i class="bx bx-edit-alt me-1"></i> Edit
                                            </a>
                                            <a class="dropdown-item" href="@Url.Action("DeleteSlider", "Slider", new { id = item.SliderId })" onclick="return confirm('Are you sure you want to delete this slider?')">
                                                <i class="bx bx-trash me-1"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="bx bx-info-circle display-4 text-muted mb-2"></i>
                                    <h6 class="text-muted">No Slider records found</h6>
                                    <p class="text-muted">Click "Add New Slider" to create your first record.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

