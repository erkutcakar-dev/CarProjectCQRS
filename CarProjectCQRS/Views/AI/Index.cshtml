@model IEnumerable<CarProjectCQRS.Entities.Car>

@{
    ViewData["Title"] = "AI Car Search & Recommendation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Dashboard /</span> AI Car Search & Recommendation
    </h4>

    <!-- AI Recommendation Section - Always Visible -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bx bx-brain me-2"></i>AI Car Recommendation
                    </h5>
                    <span class="badge bg-primary">Powered by AI</span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="aiRequirements" class="form-label">Tell us what you need:</label>
                                <textarea id="aiRequirements" class="form-control" rows="3" 
                                    placeholder="e.g., I need a fuel-efficient car for city driving with 4 seats, budget around $200 per day..."></textarea>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="button" id="getRecommendation" class="btn btn-primary w-100">
                                <i class="bx bx-search me-2"></i>Get AI Recommendation
                            </button>
                        </div>
                    </div>
                    <div id="aiRecommendation" class="mt-3" style="display: none;">
                        <div class="alert alert-info">
                            <h6><i class="bx bx-lightbulb me-2"></i>AI Recommendation:</h6>
                            <div id="recommendationText"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section - Hidden Initially -->
    <div class="row mb-4" id="searchFilterSection" style="display: none;">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bx bx-filter me-2"></i>Filter Recommended Cars
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Price Range -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Price Range ($)</label>
                            <div class="row">
                                <div class="col-6">
                                    <input type="number" id="minPriceFilter" class="form-control" placeholder="Min Price" step="0.01">
                                </div>
                                <div class="col-6">
                                    <input type="number" id="maxPriceFilter" class="form-control" placeholder="Max Price" step="0.01">
                                </div>
                            </div>
                        </div>

                        <!-- Year Range -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Model Year Range</label>
                            <div class="row">
                                <div class="col-6">
                                    <input type="number" id="minYearFilter" class="form-control" placeholder="Min Year" min="1990" max="2030">
                                </div>
                                <div class="col-6">
                                    <input type="number" id="maxYearFilter" class="form-control" placeholder="Max Year" min="1990" max="2030">
                                </div>
                            </div>
                        </div>

                        <!-- Sort By -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Sort By</label>
                            <select id="sortByFilter" class="form-select">
                                <option value="brand">Brand A-Z</option>
                                <option value="priceAsc">Price: Low to High</option>
                                <option value="priceDesc">Price: High to Low</option>
                                <option value="yearDesc">Year: Newest First</option>
                                <option value="yearAsc">Year: Oldest First</option>
                                <option value="rating">Highest Rating</option>
                            </select>
                        </div>

                        <!-- Action Buttons -->
                        <div class="col-md-6 mb-3 d-flex align-items-end">
                            <button type="button" id="filterBtn" class="btn btn-primary me-2">
                                <i class="bx bx-filter me-2"></i>Apply Filters
                            </button>
                            <button type="button" id="resetBtn" class="btn btn-outline-secondary">
                                <i class="bx bx-refresh me-2"></i>Reset
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Results Section - Hidden Initially -->
    <div class="row" id="resultsSection" style="display: none;">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bx bx-car me-2"></i>Recommended Cars
                        <span class="badge bg-primary ms-2" id="carCount">0 Cars Found</span>
                    </h5>
                </div>
                <div class="card-body">
                    <div id="carResults">
                        <!-- Results will be populated here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Store all cars data
            var allCars = @Html.Raw(Json.Serialize(Model.Select(c => new {
                CarId = c.CarId,
                Brand = c.Brand,
                Model = c.Model,
                ImageUrl = c.ImageUrl,
                ReviewScore = c.ReviewScore,
                DailyPrice = c.DailyPrice,
                SeatCount = c.SeatCount,
                TransmissionType = c.TransmissionType,
                FuelType = c.FuelType,
                ModelYear = c.ModelYear,
                GearType = c.GearType,
                Mileage = c.Mileage,
                IsAvailable = c.IsAvailable
            })));

            // AI Recommendation functionality
            $('#getRecommendation').click(function() {
                var requirements = $('#aiRequirements').val().trim();
                
                if (!requirements) {
                    alert('Please enter your requirements first.');
                    return;
                }
                
                var button = $(this);
                var originalText = button.html();
                button.html('<i class="bx bx-loader-alt bx-spin me-2"></i>Getting Recommendation...');
                button.prop('disabled', true);
                
                $.ajax({
                    url: '@Url.Action("GetAIRecommendation")',
                    type: 'POST',
                    data: { requirements: requirements },
                    success: function(response) {
                        if (response.success) {
                            $('#recommendationText').html(response.recommendation);
                            $('#aiRecommendation').show();
                            
                            // Show search and results sections after AI recommendation
                            $('#searchFilterSection').slideDown();
                            $('#resultsSection').slideDown();
                            
                            // Display all cars initially
                            displayCars(allCars);
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('An error occurred while getting the recommendation.');
                    },
                    complete: function() {
                        button.html(originalText);
                        button.prop('disabled', false);
                    }
                });
            });
            
            // Filter functionality
            $('#filterBtn').click(function() {
                filterCars();
            });

            // Reset functionality
            $('#resetBtn').click(function() {
                $('#minPriceFilter, #maxPriceFilter, #minYearFilter, #maxYearFilter').val('');
                $('#sortByFilter').val('brand');
                displayCars(allCars);
            });

            // Auto-filter on input change
            $('#minPriceFilter, #maxPriceFilter, #minYearFilter, #maxYearFilter, #sortByFilter').change(function() {
                filterCars();
            });

            function filterCars() {
                var minPrice = parseFloat($('#minPriceFilter').val()) || 0;
                var maxPrice = parseFloat($('#maxPriceFilter').val()) || 999999;
                var minYear = parseInt($('#minYearFilter').val()) || 0;
                var maxYear = parseInt($('#maxYearFilter').val()) || 9999;
                var sortBy = $('#sortByFilter').val();

                var filteredCars = allCars.filter(function(car) {
                    return car.DailyPrice >= minPrice && 
                           car.DailyPrice <= maxPrice && 
                           car.ModelYear >= minYear && 
                           car.ModelYear <= maxYear;
                });

                // Sort cars
                filteredCars.sort(function(a, b) {
                    switch (sortBy) {
                        case 'brand':
                            return a.Brand.localeCompare(b.Brand);
                        case 'priceAsc':
                            return a.DailyPrice - b.DailyPrice;
                        case 'priceDesc':
                            return b.DailyPrice - a.DailyPrice;
                        case 'yearDesc':
                            return b.ModelYear - a.ModelYear;
                        case 'yearAsc':
                            return a.ModelYear - b.ModelYear;
                        case 'rating':
                            return b.ReviewScore - a.ReviewScore;
                        default:
                            return 0;
                    }
                });

                displayCars(filteredCars);
            }

            function displayCars(cars) {
                $('#carCount').text(cars.length + ' Cars Found');
                
                if (cars.length > 0) {
                    var html = '<div class="row">';
                    
                    cars.forEach(function(car) {
                        var stars = '';
                        for (var i = 1; i <= 5; i++) {
                            if (i <= car.ReviewScore) {
                                stars += '<i class="bx bxs-star text-warning"></i>';
                            } else if (i - 0.5 <= car.ReviewScore) {
                                stars += '<i class="bx bxs-star-half text-warning"></i>';
                            } else {
                                stars += '<i class="bx bx-star text-muted"></i>';
                            }
                        }
                        
                        var imageHtml = car.ImageUrl ? 
                            `<img src="${car.ImageUrl}" class="card-img-top" alt="${car.Brand} ${car.Model}" style="height: 200px; object-fit: cover;">` :
                            `<div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;"><i class="bx bx-car text-muted" style="font-size: 3rem;"></i></div>`;
                        
                        html += `
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100">
                                    ${imageHtml}
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">${car.Brand} ${car.Model}</h5>
                                        <p class="card-text text-muted">${car.ModelYear} Model</p>
                                        
                                        <div class="row mb-3">
                                            <div class="col-6">
                                                <small class="text-muted">Fuel Type</small>
                                                <div class="fw-bold">${car.FuelType}</div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Gear Type</small>
                                                <div class="fw-bold">${car.GearType}</div>
                                            </div>
                                        </div>
                                        
                                        <div class="row mb-3">
                                            <div class="col-6">
                                                <small class="text-muted">Seats</small>
                                                <div class="fw-bold">${car.SeatCount}</div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Mileage</small>
                                                <div class="fw-bold">${car.Mileage.toLocaleString()} km</div>
                                            </div>
                                        </div>
                                        
                                        <div class="row mb-3">
                                            <div class="col-6">
                                                <small class="text-muted">Daily Price</small>
                                                <div class="fw-bold text-primary">$${car.DailyPrice.toFixed(2)}</div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Rating</small>
                                                <div class="fw-bold">
                                                    ${stars}
                                                    <span class="ms-1">${car.ReviewScore.toFixed(1)}</span>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="mt-auto">
                                            <div class="d-grid gap-2">
                                                <button class="btn btn-primary" onclick="selectCar(${car.CarId})">
                                                    <i class="bx bx-check me-2"></i>Select This Car
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `;
                    });
                    
                    html += '</div>';
                    $('#carResults').html(html);
                } else {
                    $('#carResults').html(`
                        <div class="text-center py-5">
                            <i class="bx bx-search-alt text-muted" style="font-size: 4rem;"></i>
                            <h4 class="text-muted mt-3">No cars found</h4>
                            <p class="text-muted">Try adjusting your filter criteria.</p>
                        </div>
                    `);
                }
            }
            
            // Car selection functionality
            window.selectCar = function(carId) {
                if (confirm('Are you sure you want to select this car?')) {
                    alert('Car selected! Car ID: ' + carId);
                    // Example: window.location.href = '@Url.Action("BookCar", "Booking")' + '?carId=' + carId;
                }
            };
        });
    </script>
}
