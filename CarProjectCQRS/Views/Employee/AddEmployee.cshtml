@model CarProjectCQRS.Entities.Employee

@{
    ViewData["Title"] = "Add Employee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Dashboard / Employee Management /</span> Add New Employee
    </h4>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Add New Employee</h5>
                    <a href="@Url.Action("EmployeeList", "Employee")" class="btn btn-outline-secondary">
                        <i class="bx bx-arrow-back me-2"></i>Back to List
                    </a>
                </div>
                <div class="card-body">
                    <form asp-action="AddEmployee" method="post">
                        <div class="row">
                            <!-- Full Name -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label">Full Name <span class="text-danger">*</span></label>
                                <input asp-for="FullName" class="form-control" placeholder="Enter employee full name" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <!-- Position -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Position" class="form-label">Position <span class="text-danger">*</span></label>
                                <input asp-for="Position" class="form-control" placeholder="Enter employee position" />
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Enter employee email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <!-- Image URL -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="ImageUrl" class="form-label">Image URL</label>
                                <input asp-for="ImageUrl" class="form-control" placeholder="Enter employee image URL" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>

                            <!-- Status -->
                            <div class="col-12 mb-3">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="IsActive" class="form-check-label">Active Status</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="bx bx-save me-2"></i>Save Employee
                                </button>
                                <a href="@Url.Action("EmployeeList", "Employee")" class="btn btn-outline-secondary">
                                    <i class="bx bx-x me-2"></i>Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
